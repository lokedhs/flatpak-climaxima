                "env": { "BUILD_ROOT": "/app/sbcl" }
            },
            "build-commands": [
                "sh install.sh",
                "zcat ql.tar.gz | (cd /app && tar xf -)",
                "mkdir /app/tools",
                "cp sbclrc /app/tools/sbcl-init.lisp"
            ]
